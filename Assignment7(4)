<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Functions: Average, Power, Word Count</title>
 
</head>
<body>
  <h1>Small Utilities</h1>

  <section class="card" aria-labelledby="avgHeading">
    <h2 id="avgHeading">a) Average (total marks & subjects)</h2>
    <label for="total">Total marks</label>
    <input id="total" type="number" step="0.01" placeholder="e.g. 450">
    <label for="subjects">Number of subjects</label>
    <input id="subjects" type="number" step="1" placeholder="e.g. 5">
    <button onclick="onAvgClick()">Find Average</button>
    <div id="avgResult" class="result" aria-live="polite"></div>
  </section>

  <section class="card" aria-labelledby="powHeading">
    <h2 id="powHeading">b) Power (x ^ y)</h2>
    <label for="base">Base (x)</label>
    <input id="base" type="number" step="any" placeholder="e.g. 2">
    <label for="exp">Exponent (y)</label>
    <input id="exp" type="number" step="any" placeholder="e.g. 3">
    <button onclick="onPowerClick()">Calculate Power</button>
    <div id="powResult" class="result" aria-live="polite"></div>
  </section>

  <section class="card" aria-labelledby="wordsHeading">
    <h2 id="wordsHeading">c) Word Count</h2>
    <label for="text">Enter text</label>
    <textarea id="text" rows="4" placeholder="Type or paste text here..."></textarea>
    <button onclick="onCountClick()">Count Words</button>
    <div id="countResult" class="result" aria-live="polite"></div>
  </section>

  <script>
    // Core functions (separate from UI handlers)

    // a) average: total marks divided by number of subjects
    function calculateAverage(totalMarks, numberOfSubjects) {
      if (!isFinite(totalMarks) || !isFinite(numberOfSubjects) || numberOfSubjects <= 0) {
        return NaN;
      }
      return totalMarks / numberOfSubjects;
    }

    // b) power function: x to the power y
    function power(x, y) {
      // allow fractional exponents and negative numbers
      return Math.pow(x, y);
    }

    // c) word count: count words in a string
    function countWords(str) {
      if (typeof str !== 'string') return 0;
      // split on whitespace and filter out empty strings
      return str.trim() === '' ? 0 : str.trim().split(/\s+/).length;
    }

    // UI button click handlers (call core functions)

    function onAvgClick() {
      const total = parseFloat(document.getElementById('total').value);
      const subjects = parseInt(document.getElementById('subjects').value, 10);
      const out = document.getElementById('avgResult');

      if (!isFinite(total) || !isFinite(subjects) || subjects <= 0) {
        out.textContent = 'Please enter valid total marks and a positive number of subjects.';
        return;
      }

      const avg = calculateAverage(total, subjects);
      out.textContent = 'Average = ' + avg.toFixed(2);
    }

    function onPowerClick() {
      const x = parseFloat(document.getElementById('base').value);
      const y = parseFloat(document.getElementById('exp').value);
      const out = document.getElementById('powResult');

      if (!isFinite(x) || !isFinite(y)) {
        out.textContent = 'Please enter valid numbers for base and exponent.';
        return;
      }

      const val = power(x, y);
      out.textContent = `${x} ^ ${y} = ${val}`;
    }

    function onCountClick() {
      const text = document.getElementById('text').value;
      const out = document.getElementById('countResult');
      const words = countWords(text);
      out.textContent = `Word count: ${words}`;
    }
  </script>
</body>
</html>

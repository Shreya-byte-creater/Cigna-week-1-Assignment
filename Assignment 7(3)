<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Meal Cost Calculator</title>
</head>
<body>
  <h1>Meal Cost Calculator</h1>

  <label>
    Meals Base Cost:
    <input id="base" type="number" step="0.01" placeholder="e.g. 45.50">
  </label>
  <button id="calc">Calculate</button>

  <div id="out" style="margin-top:1rem;"></div>

  <script>
    document.getElementById('calc').addEventListener('click', function () {
      const base = parseFloat(document.getElementById('base').value);
      if (!Number.isFinite(base) || base < 0) {
        alert('Enter a valid base cost.');
        return;
      }
      const tip = base * 0.10;   // 10%
      const tax = base * 0.08;   // 8%
      const total = base + tip + tax;
      const rounded = Math.round(total);

      const out = document.getElementById('out');
      out.innerHTML =
        'Meals Base Cost : $' + base.toFixed(2) + '<br>' +
        'Tip Amount      : $' + tip.toFixed(2) + '<br>' +
        'Tax Amount      : $' + tax.toFixed(2) + '<br>' +
        'Total Amount    : $' + rounded + ' (rounded)';
    });
  </script>
</body>
</html>
